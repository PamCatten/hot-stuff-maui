<?xml version="1.0" encoding="UTF-8" ?>
<uranium:UraniumContentPage 
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:uranium="clr-namespace:UraniumUI.Pages;assembly=UraniumUI"
             xmlns:attachment="clr-namespace:UraniumUI.Material.Attachments;assembly=UraniumUI.Material"
             xmlns:material="clr-namespace:UraniumUI.Material.Controls;assembly=UraniumUI.Material"
             xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
             xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui"
             x:Class="HotStuff.Pages.ItemsPage"
             xmlns:local="clr-namespace:HotStuff"
             xmlns:pages="clr-namespace:HotStuff.Pages"
             x:DataType="pages:ItemsPageViewModel"
             xmlns:validation="clr-namespace:InputKit.Shared.Validations;assembly=InputKit.Maui"
             Title="Items"
    >


    <uranium:UraniumContentPage.BindingContext>
        <pages:ItemsPageViewModel />
    </uranium:UraniumContentPage.BindingContext>

    <uranium:UraniumContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="{StaticResource ProfileIcon}" Clicked="OnProfilePageClicked"/>
    </uranium:UraniumContentPage.ToolbarItems>

    <uranium:UraniumContentPage.Resources>
        <Style TargetType="Frame">
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SecondaryContainer}, Dark={StaticResource SecondaryContainer}}" />
        </Style>
    </uranium:UraniumContentPage.Resources>

    <ScrollView Orientation="Both" HorizontalScrollBarVisibility="Always">

        <VerticalStackLayout>

            <Button Text="Delete" StyleClass="FilledTonalButton"  Command="{Binding RemoveSelectedItemsCommand}" HorizontalOptions="Start" />
            <material:DataGrid ItemsSource="{Binding Items}" SelectedItems="{Binding SelectedItems}" HorizontalOptions="Center" VerticalOptions="Center">
                <material:DataGrid.Columns>
                    <material:DataGridSelectionColumn/>
                    <material:DataGridColumn Binding="{Binding Items}" Title="Item Name" Width="Auto"/>
                    <material:DataGridColumn PropertyName="Category" Title="Item Category" Width="Auto"/>
                    <material:DataGridColumn PropertyName="BrandManufacturer" Title="Brand / Manufacturer" Width="Auto"/>
                    <material:DataGridColumn PropertyName="Room" Title="Room" Width="Auto"/>
                    <material:DataGridColumn PropertyName="ItemVersion" Title="Version" Width="Auto"/>
                    <material:DataGridColumn PropertyName="Color" Title="Color" Width="Auto"/>
                    <material:DataGridColumn PropertyName="PurchaseDate" Title="Purchase Date" Width="Auto"/>
                    <material:DataGridColumn PropertyName="AmountPaid" Title="Amount Paid" Width="Auto"/>
                    <material:DataGridColumn PropertyName="PurchaseProof" Title="Purchase Proof" Width="Auto"/>
                    <material:DataGridColumn PropertyName="ItemDescription" Title="Item Description" Width="*"/>
                </material:DataGrid.Columns>
            </material:DataGrid>
            
        </VerticalStackLayout>

    </ScrollView>

    <uranium:UraniumContentPage.Attachments>
        <attachment:BackdropView
                Title="Add" 
                IconImageSource="{StaticResource AddIcon}"
                BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}">
            <VerticalStackLayout Spacing="10" Padding="25,30" HorizontalOptions="Center" MinimumWidthRequest="400">
                <material:TextField 
                    Title="Item Name (Required)"
                    Text="{Binding newItemPublic.ItemName}"
                    AccentColor="{StaticResource OnPrimary}"
                />
                <material:PickerField 
                    Title="Item Category (Required)"
                    ItemsSource="{x:Static pages:Item.AvailableCategories}"
                    SelectedItem="{Binding newItemPublic.Category}"
                    AllowClear="True"
                    AccentColor="{StaticResource OnPrimary}"
                    Icon="{FontImageSource FontFamily=FontAwesome, Glyph={x:Static local:IconFont.CircleChevronDown}}"
                />
                <material:PickerField 
                    Title="Item Room (Required)"
                    ItemsSource="{x:Static pages:Item.AvailableRooms}"
                    SelectedItem="{Binding newItemPublic.Room}"
                    AllowClear="True"
                    AccentColor="{StaticResource OnPrimary}"
                    Icon="{FontImageSource FontFamily=FontAwesome, Glyph={x:Static local:IconFont.CircleChevronDown}}"
                />
                <material:TextField 
                    Title="Brand / Manufacturer Name (Optional)"
                    Text="{Binding newItemPublic.BrandManufacturer}"
                    AllowClear="True"
                    AccentColor="{StaticResource OnPrimary}"
                />
                <material:TextField 
                    Title="Item Version (Optional)"
                    Text="{Binding newItemPublic.ItemVersion}"
                    AllowClear="True"
                    AccentColor="{StaticResource OnPrimary}"
                />
                <material:TextField 
                    Title="Item Description (Optional)"
                    Text="{Binding newItemPublic.ItemDescription}"
                    AllowClear="True"
                    AccentColor="{StaticResource OnPrimary}"
                />
                <Button 
                    Command="{Binding AddNewItemCommand}" 
                    Text="Add Item"
                    input:FormView.IsSubmitButton="True"
                    StyleClass="ElevatedButton"
                />
            </VerticalStackLayout>
        </attachment:BackdropView>
    </uranium:UraniumContentPage.Attachments>

</uranium:UraniumContentPage>