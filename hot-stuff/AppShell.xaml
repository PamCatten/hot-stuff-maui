<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HotStuff.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:HotStuff.View"
    xmlns:local="clr-namespace:HotStuff"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home" Icon="{StaticResource HomeIcon}">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" 
            />
        </Tab>
        <Tab Title="Items" Icon="{StaticResource DatabaseIcon}">
            <ShellContent
                Title="Items"
                ContentTemplate="{DataTemplate view:ItemsPage}"
                Route="ItemsPage" 
            />
        </Tab>
        <Tab Title="Learn" Icon="{StaticResource LearnIcon}">
            <ShellContent
                Title="Learn"
                ContentTemplate="{DataTemplate view:LearnPage}"
                Route="LearnPage"
                
            />
        </Tab>
    </TabBar>
</Shell>
