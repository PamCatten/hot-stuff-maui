<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="hot_stuff.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:hot_stuff.Pages"
    xmlns:local="clr-namespace:hot_stuff"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Items" Icon="{StaticResource DatabaseIcon}">
            <ShellContent
                Title="Items"
                ContentTemplate="{DataTemplate pages:ItemsPage}"
                Route="OnePage" />
        </Tab>
        <Tab Title="Home" Icon="{StaticResource HomeIcon}">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Learn" Icon="{StaticResource LearnIcon}">
            <ShellContent
                Title="Learn"
                ContentTemplate="{DataTemplate pages:LearnPage}"
                Route="ThreePage" />
        </Tab>
    </TabBar>
</Shell>
